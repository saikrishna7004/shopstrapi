{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 3
    },
    "slug": {
      "type": "uid",
      "required": true,
      "minLength": 3,
      "maxLength": 100,
      "targetField": "title"
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "clothing",
        "electronics",
        "mugs",
        "household"
      ],
      "default": "clothing",
      "required": true
    },
    "size": {
      "type": "string",
      "maxLength": 70
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "red",
        "blue",
        "green",
        "yellow",
        "black"
      ],
      "required": true
    },
    "price": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "availableQty": {
      "type": "integer",
      "default": 0,
      "required": true
    }
  }
}
